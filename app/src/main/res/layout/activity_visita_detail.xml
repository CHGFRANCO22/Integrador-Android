<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".ui.VisitaDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliente"
        android:textAppearance="?attr/textAppearanceLabelLarge" />

    <TextView
        android:id="@+id/textViewDetailNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceHeadline5"
        tools:text="Nombre del Cliente de Ejemplo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Direcci贸n"
        android:textAppearance="?attr/textAppearanceLabelLarge" />

    <TextView
        android:id="@+id/textViewDetailDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        tools:text="Avenida Siempre Viva 742" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Detalles de la visita"
        android:textAppearance="?attr/textAppearanceLabelLarge" />

    <TextView
        android:id="@+id/textViewDetailDetalles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceBody1"
        tools:text="El cliente necesita una reposici贸n urgente de su stock de hilos de seda." />

    <!-- Espacio flexible para empujar los botones hacia abajo -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Contenedor para los botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Bot贸n para Editar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEditar"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Editar" />

        <!-- Bot贸n para Eliminar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEliminar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/design_default_color_error"
            android:text="Eliminar"
            app:icon="@android:drawable/ic_menu_delete" />

    </LinearLayout>

</LinearLayout>
